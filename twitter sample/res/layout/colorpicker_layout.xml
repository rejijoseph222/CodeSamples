<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:gravity="center_horizontal"
    android:background="#ffffff"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    >

    <Button
        android:id="@+id/btn_color_blue"
        android:layout_width="@dimen/color_picker_textview"
        android:layout_height="@dimen/color_picker_textview"
        android:background="@color/time_line_background_blue"
        android:layout_margin="5dp" />

    <Button
        android:id="@+id/btn_color_red"
        android:layout_width="@dimen/color_picker_textview"
        android:layout_height="@dimen/color_picker_textview"
        android:background="@color/time_line_background_red"
        android:layout_margin="5dp" />

    <Button
        android:id="@+id/btn_color_black"
        android:layout_width="@dimen/color_picker_textview"
        android:layout_height="@dimen/color_picker_textview"
        android:background="@color/time_line_background_black"
        android:layout_margin="5dp" />

    <Button
        android:id="@+id/btn_color_pink"
        android:layout_width="@dimen/color_picker_textview"
        android:layout_height="@dimen/color_picker_textview"
        android:background="@color/time_line_background_pink"
       android:layout_margin="5dp" />

    <Button
        android:id="@+id/btn_color_purple"
        android:layout_width="@dimen/color_picker_textview"
        android:layout_height="@dimen/color_picker_textview"
        android:background="@color/time_line_background_purple"
        android:layout_margin="5dp" />

    <Button
        android:id="@+id/btn_color_green"
        android:layout_width="@dimen/color_picker_textview"
        android:layout_height="@dimen/color_picker_textview"
        android:background="@color/time_line_background_green"
        android:layout_margin="5dp" 
        />

</LinearLayout>